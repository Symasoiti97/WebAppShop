@model AddItemViewModel
@{
    ViewData["Title"] = "Добавить товар";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-3"> 
        <form asp-action="AddItem" asp-controller="Home" method="post" enctype="multipart/form-data">
            <p>
                <label>Name</label>
                <input type="text" name="NewItem.Name" class="form-control"/>
            </p>
            <p>
                <label>Price</label>
                <input type="text" name="NewItem.Price" class="form-control"/>
            </p>
            <p>
                <label>Count</label>
                <input type="text" name="NewItem.Count" class="form-control" />
            </p>
            <p>
                <input type="submit" value="Добавить" />
            </p>
        </form>
    </div>
</div>



