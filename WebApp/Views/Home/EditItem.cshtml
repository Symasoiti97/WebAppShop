@model EditItemViewModel

@{
    ViewData["Title"] = "Редактировать товар";
}

<h2>Редактор</h2>

<div class="row">
    <div class="col-md-3"> 
        <form asp-action="EditItem" asp-controller="Home" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Item.Id"/>
            <p>
                <label>Name</label>
                <input type="text" name="Item.Name" asp-for="Item.Name" class="form-control"/>
            </p>
            <p>
                <label>Price</label>
                <input type="text" name="Item.Price" asp-for="Item.Price" class="form-control"/>
            </p>
            <p>
                <label>Count</label>
                <input type="text" name="Item.Quantity" asp-for="Item.Quantity" class="form-control"/>
            </p>
            <p>
                <input type="submit" value="Редактировать"/>
            </p>
        </form>
    </div>
</div>